<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
android:id="@+id/scrollView1"
android:background="#b6b6b6">

<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#b6b6b6">
  
	<ImageView 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:maxWidth="385px"
    android:maxHeight="105px"
    android:id="@+id/title" 
    android:src="@drawable/title2" 
    android:scaleType="fitXY"
    ></ImageView>
  	
  
	<TextView 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="18px"
    android:textStyle="bold"
    android:layout_gravity="center_horizontal"
    android:text="Thanks for your valuable input!" 
    android:padding="4px"
    >
    </TextView>
 
 <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:background="#b6b6b6">
  
  	<ImageView 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
	android:src="@drawable/squirrel2" 
    ></ImageView>
    
</LinearLayout>

	<TextView 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textSize="14px"
    android:text="For More information, please visit the Project Squirrel website:"
    android:padding="4px"
    >
    </TextView>
    
	<TextView 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textSize="16px"
    android:text="http://projectsquirrel.org/"
    android:autoLink="web"
    android:paddingBottom="20px"
    >
    </TextView>
    
      	<RelativeLayout android:layout_height="fill_parent" android:layout_width="fill_parent">
    
        <Button 
        android:text="OK" 
        android:id="@+id/final_ok_button" 
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" 
        android:layout_width="100px">
        </Button>
        
    	</RelativeLayout>
</LinearLayout>

</ScrollView>