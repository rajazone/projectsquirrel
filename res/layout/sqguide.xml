
    <LinearLayout android:background="#F0E68C" android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <ScrollView android:id="@+id/scrollView1" android:layout_height="fill_parent" android:layout_width="fill_parent">
            <LinearLayout android:id="@+id/linearLayout2" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
                <TextView 
                android:text="Gray vs Fox" 
                android:id="@+id/textView1" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="#556B2F"
                android:textStyle="bold"></TextView>
                
                <TextView 
                android:text="\nHow do gray and fox squirrels differ?\n" 
                android:id="@+id/textView6" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:textColor="#556B2F"
                android:textStyle="bold"></TextView>
                <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:layout_width="fill_parent">
                    <LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout4" android:layout_width="wrap_content" android:orientation="vertical">
                        <ImageView android:id="@+id/imageView1" android:src="@drawable/fox_squirrel" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
                        <TextView android:id="@+id/textView2" android:layout_height="wrap_content" android:textStyle="bold" android:textSize="16px" android:text="Fox Squirrel" android:textColor="#556B2F" android:layout_width="wrap_content"></TextView>
                        <TextView android:id="@+id/textView3" android:layout_height="wrap_content" android:text="-Orange or rust\n backs and sides\n-Orange bellies\n-Black-fringed tails" android:textColor="#556B2F" android:layout_width="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout6" android:layout_width="wrap_content">
                        <TextView android:text="  " android:id="@+id/textView7" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                    </LinearLayout>
                    <LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout5" android:layout_width="wrap_content" android:orientation="vertical">
                        <ImageView android:id="@+id/imageView2" android:src="@drawable/grey_squirrel" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
                        <TextView android:id="@+id/textView4" android:textColor="#556B2F" android:layout_height="wrap_content" android:textSize="16px" android:textStyle="bold" android:text="Gray Squirrel" android:layout_width="wrap_content"></TextView>
                        <TextView android:id="@+id/textView5" android:textColor="#556B2F" android:layout_height="wrap_content" android:text="-Gray backs and side\n-White or gray bellies\n-White-fringed tails" android:layout_width="wrap_content"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_width="wrap_content" android:textStyle="bold" android:textColor="#556B2F" android:text="\nThere is some overlap in appearance"></TextView>
                <TextView android:text="Gray squirrels may have a hint of rust on their backs and sides. Fox squirrels may have predominantly white bellies" android:id="@+id/textView9" android:textColor="#556B2F" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                <TextView android:text="\nWhat about black squirrels?" android:textStyle="bold" android:id="@+id/textView10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#556B2F"></TextView>
                <TextView android:textColor="#556B2F" android:text="In the Chicagoland region, any black squirrel you might see is a variety of the gray squirrel." android:id="@+id/textView11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="10px"></TextView>
                <Button android:text="Take a Photo" android:id="@+id/userPhotoButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
                <ImageView android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/userPic" android:paddingLeft="4px"></ImageView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
