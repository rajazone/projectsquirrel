<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:stretchColumns="2">
    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView 
        style="@style/HeadingFont" 
        android:text="Identifying the different tree types" 
        android:id="@+id/desctext" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
        </TextView>
  
    </TableRow>
     <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:layout_width="wrap_content" android:id="@+id/NutBearingImage" android:src="@drawable/icon" android:layout_height="wrap_content"  android:gravity="left"></ImageView>
   
    
    </TableRow>
    <TextView android:id="@+id/NutBearingDesc" android:layout_width="wrap_content" android:text="NutBearing Trees" android:padding="3dip" android:layout_height="wrap_content"  style="@style/DescriptionFont"></TextView>
    <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
        
        <ImageView 
        android:layout_width="wrap_content" 
        android:id="@+id/SeedBearingImage" 
        android:src="@drawable/icon" 
        android:layout_height="wrap_content" 
        android:padding="3dip">
        </ImageView>
        
      
    
    </TableRow>
      <TextView 
        style="@style/DescriptionFont"
        android:text="Seed-bearing trees" 
        android:id="@+id/SeedBearingDesc" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
       
        android:padding="3dip" >
        </TextView>
    
    <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView 
        android:layout_width="wrap_content" 
        android:id="@+id/FruitBearingImage" 
        android:src="@drawable/icon" 
        android:layout_height="wrap_content" 
        android:padding="3dip">
        </ImageView>
        
        
    
    </TableRow>
    <TextView 
        style="@style/DescriptionFont"
        android:text="Fruit-bearing trees" 
        android:id="@+id/FruitBearingDesc" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        </TextView>
    
    <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView 
        android:layout_width="wrap_content" 
        android:id="@+id/TinySeededImage" 
        android:src="@drawable/icon" 
        android:layout_height="wrap_content" 
        android:padding="3dip">
        </ImageView>
        
      
    
    
    </TableRow>
      <TextView 
        style="@style/DescriptionFont"
        android:text="Tiny-seeded trees" 
        android:id="@+id/TinySeededDesc" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:padding="3dip"
        >
        </TextView>
    <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView 
        android:layout_width="wrap_content" 
        android:id="@+id/ConiferousImage" 
        android:src="@drawable/icon" 
        android:layout_height="wrap_content" 
        android:padding="3dip">
        </ImageView>
        
   
   
   
    </TableRow>
         <TextView 
        style="@style/DescriptionFont"
        android:text="Coniferous trees" 
        android:id="@+id/ConiferousDesc" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:padding="3dip"
       >
        </TextView>
    
    
</TableLayout>
