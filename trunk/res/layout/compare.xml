<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b6b6b6" android:orientation="vertical"
    android:screenOrientation="portrait">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5px"
    android:background="#b6b6b6" android:orientation="horizontal">
    <!--  DATE  -->
     
	    <TextView 
	    android:text="Email :  " 
	    android:id="@+id/date1" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:textStyle="bold"
	    android:textSize="14px"
	    >
	    </TextView>
	    
	    <!--  TIME  -->
	    <EditText 
	    android:layout_width="wrap_content" 
	    android:text="enter your email id" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/email_editText"></EditText>
	</LinearLayout>
	
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#b6b6b6" android:orientation="horizontal">
    
    <!--  LOCATION  -->
    <!--  Note: not in table as to allow for "EditText" ro span entire screen width -->
	    
	    <!--  Location should auto-fill if GPS is enabled. -->
	 </LinearLayout>
		
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#b6b6b6" android:orientation="horizontal"> 
	    
  	<!--  SETTING  -->
    </LinearLayout>	
  
  	<!-- NOTE: Divider created here dynamically in .java file -->
  	<ImageView
	android:id="@+id/div1" 
	android:layout_width="fill_parent" 
	android:layout_height="2px"
	>
	</ImageView>

	
	<!--  SQUIRREL COUNT -->
	<TextView 
    android:text="Compared to the last year, the squirrel population has :" 
    android:id="@+id/header2" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:background="#000000"
    android:textStyle="bold"
    android:textSize="12px"
    >
    </TextView>
	
	
    
        <RadioGroup android:id="@+id/radioGroup1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TableRow>
            <RadioButton android:id="@+id/radio0" android:layout_width="wrap_content" android:text="Increased" android:layout_height="wrap_content" android:checked="true"></RadioButton>
            <RadioButton android:id="@+id/radio1" android:layout_width="wrap_content" android:text="Decreased" android:layout_height="wrap_content"></RadioButton>            </TableRow>
            
            <RadioButton android:id="@+id/radio2" android:layout_width="wrap_content" android:text="NoChange" android:layout_height="wrap_content"></RadioButton>
        </RadioGroup>    
	

	
	<TextView 
    android:text="Have you submitted this observation already ?" 
    android:id="@+id/header2" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:background="#000000"
    android:textStyle="bold"
    android:textSize="12px"
    >
    </TextView>
    
    <RadioGroup android:id="@+id/radioGroup2" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TableRow>
        <RadioButton android:id="@+id/radio0" android:layout_width="wrap_content" android:text="Yes" android:layout_height="wrap_content" android:checked="true"></RadioButton>
        <RadioButton android:id="@+id/radio1" android:layout_width="wrap_content" android:text="No" android:layout_height="wrap_content"></RadioButton>
        </TableRow>
    </RadioGroup>
<EditText 
	    android:layout_width="wrap_content" 
	    android:text="Other Site, please specify here" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/othersite_editText"></EditText>	
	
  		<RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent">
    
        <Button 
        android:text="Submit" 
        android:id="@+id/submit_button" 
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true" 
        android:layout_alignParentBottom="true" 
        android:layout_width="100px">
        </Button>
        
    </RelativeLayout>
    
</LinearLayout>