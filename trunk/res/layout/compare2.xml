<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b6b6b6" android:orientation="vertical"
    android:screenOrientation="portrait">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5px"
    android:background="#b6b6b6" android:orientation="horizontal">
     
	    <TextView 
	    android:text="Email :  " 
	    android:id="@+id/email" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:textStyle="bold"
	    android:textSize="14px"
	    >
	    </TextView>
	    
	    <EditText 
	    android:layout_width="wrap_content" 
	    android:hint="enter your email id" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/email_edit"></EditText>
	</LinearLayout>
	    	  <LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" android:orientation="horizontal"
	  android:background="#b6b6b6">
	    	  <TextView 
    android:text="Compared to last year, the number of squirrels has" 
    android:id="@+id/header2" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:background="#000000"
    android:textStyle="bold"
    android:textSize="12px"
    >
    </TextView>
    </LinearLayout>
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_height="wrap_content" android:orientation="horizontal"
	  android:background="#b6b6b6" android:layout_width="fill_parent">

    	<TextView android:text="Decreased " 
    	      android:id="@+id/textView2" 
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
	    	  android:background="#000000"
	    	  android:textColor="#FF0000"
	    	  android:textStyle="bold"
	    	  android:textSize="14px">
	    	  </TextView>
	<TextView android:text="No Change "
    	      android:id="@+id/textView2" 
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
	    	  android:background="#000000"
	    	  android:textColor="#FFFFFF"
	    	  android:textStyle="bold"
	    	  android:textSize="14px">
	    	  </TextView>
	<TextView android:text="Increased" 
    	      android:id="@+id/textView2" 
              android:layout_height="wrap_content"
              android:background="#000000"
	    	  android:textColor="#6de4b8"
	    	  android:textStyle="bold"
	    	  android:textSize="14px" android:layout_width="fill_parent">
	    	  </TextView>
	    	  
	  
	</LinearLayout>
	    	  
    <TableLayout 
    android:id="@+id/tableLayout1" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
	    	 
	<TableRow  android:layout_marginBottom="10px">
		<TextView android:text="   " android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <SeekBar 
    android:layout_height="wrap_content" 
    android:layout_width="50dip" 
    android:id="@+id/compare_seekBar"
    android:progress="1"
    android:max="2" 
    android:progressDrawable="@drawable/gradient3"
    android:layout_weight=".5">
    </SeekBar>
    <TextView android:text="   " android:id="@+id/textView7" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    </TableRow>
    
    
    </TableLayout>
    <TextView 
    android:text="Have you submitted data for THIS observation site already?" 
    android:id="@+id/header2" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:background="#000000"
    android:textStyle="bold"
    android:textSize="12px"
    >
    </TextView>
    
    <RadioGroup android:id="@+id/radioGroup_previous" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/radio0" android:layout_width="wrap_content" android:text="Yes" android:layout_height="wrap_content"></RadioButton>
        <RadioButton android:id="@+id/radio1" android:layout_width="wrap_content" android:text="No" android:layout_height="wrap_content"></RadioButton>
    </RadioGroup>
    
    <TextView 
    android:text="Have you submitted data for a DIFFERENT observation site?" 
    android:id="@+id/header3" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:textColor="#FFFFFF"
    android:background="#000000"
    android:textStyle="bold"
    android:textSize="12px"
    >
    </TextView>
    
    <RadioGroup android:id="@+id/radioGroup_other" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/radio0" android:layout_width="wrap_content" android:text="Yes" android:layout_height="wrap_content"></RadioButton>
        <RadioButton android:id="@+id/radio1" android:layout_width="wrap_content" android:text="No" android:layout_height="wrap_content"></RadioButton>
    </RadioGroup>
    
    <EditText 
        android:hint="Additional comments or observations" 
        android:id="@+id/compare_editText1" 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
    </EditText>
    
    
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent">
    
        <Button 
        android:text="Submit" 
        android:id="@+id/submit" 
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true" 
        android:layout_alignParentBottom="true" 
        android:layout_width="100px">
        </Button>
        
    </RelativeLayout>
    
</LinearLayout>